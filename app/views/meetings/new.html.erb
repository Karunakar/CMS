<%= error_messages_for 'meeting' %>

<% labelled_tabular_form_for :meeting, @meeting, :url => { :action => "create" } do |f| %>



<!--[form:user]-->
<div class="box">
	<p><%= f.text_field :title, :required => true, :size => 25  %></p>
	<p>
    		<label for="meeting_date">Meeting Date</label>
    		<%= f.datetime_select :meeting_date %>
  	</p>

	<p>	<label for="venue">Venue</label>
    		<%= f.text_field :venue, :required => true %>
  	</p>
	<p>	<label for="start_time">Start time</label>
    		<%= f.datetime_select :start_time %>
  	</p>
 	<p>
		<label for="start_time">Finish time</label>
    	    	<%= f.datetime_select :finish_time %>
  	</p>
	
	<p>	<label for="type">Type</label>
    		<%= f.text_field :type %>
  	</p>
  	<p>
    		<label for="project_id">Project</label>
		
    <%= f.select("project_id", Project.find(:all, :order => :name).collect {|c| [ c.name, c.id ] }, {:prompt => 'Select project...' }, :class => '{validate:{required:true}}') %>
  	</p>
  	
	<p>
    		<%= f.submit "Create" %>
  	</p>

<%= call_hook(:view_meetings_form, :meeting => @meeting, :form => f) %>
</div>
<% end %>


<%= link_to 'Back', meetings_path %>


